<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.weindependent.app.mapper.MostSavedMapper">
    
    <select id="getSavedCountsByArticleIds" parameterType="list" resultType="com.weindependent.app.database.dataobject.SavedCountDO">
        SELECT 
            article_id AS articleId,
            saved_count AS savedCount
        FROM most_saved
        WHERE article_id IN
        <foreach item="id" collection="articleIds" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>
    
</mapper>
